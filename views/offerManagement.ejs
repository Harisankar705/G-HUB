                        <tbody>
                            
                            <% allOffers.forEach(offer=>{%>

                            
                            
                                <tr>
                                    <td><%=offer.offerName%></td>
                                    <td><%=offer.discountOn%></td>
                                    <td><%=offer.discountValue%>%</td>
                                    <td><%=offer.startDate.toLocaleDateString()%></td>
                                    <td><%=offer.endDate.toLocaleDateString()%></td>
                                    
                                    <td><%= offer.selectedCategory?offer.selectedCategory.name:"null"%></td>
                                    <td><%=offer.selectedProducts? offer.selectedProducts.name:"null"%></td>
                                    <td>
                                        <% if (offer.isActive) { %>
                                            Active
                                        <% } else { %>
                                        Not active
                                        <% } %>
                                    </td>
                                    
                                    <td>
                                    <a href="/offer-management/toggle/<%=offer._id%>" title="<%= offer.isActive ? 'Deactivate' : 'Activate' %>">
                                        <%= offer.isActive ? 'Deactivate' : 'Activate' %>
                                    </a></td>
                                    <td>
                                    <a href="/editOffer/<%=offer._id%>">Edit</a>
                                    </td>
                                    <td>
                                        <a class="deleteOfferButton" href="/deleteOffer/<%=offer._id%>" data-offer-id="<%=offer._id%>">Delete</a>

                                    </td>
                                </tr>
                                <%})%>
                                    



                            
                        </tbody>
