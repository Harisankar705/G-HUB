                <style>
                     #back-button {
                        width: 30px;
                     }
  
                </style>
                <script>
                  document.addEventListener('DOMContentLoaded', function () {
    const deleteButtons = document.querySelectorAll('.deleteOfferButton');

    deleteButtons.forEach((button) => {
        button.addEventListener('click', function (event) {
            event.preventDefault()
            const offerId = button.getAttribute('data-offer-id'); // Correct way to get the offerId
            console.log("OFFERDIIII", offerId);
            if (offerId) {
                Swal.fire({
                    title: "Are you sure",
                    text: "You won't be able to revert this",
                    icon: "warning",
                    showCancelButton: true,
                    confirmButtonColor: '#3085d6',
                    cancelButtonColor: '#d33',
                    confirmButtonText: 'Yes, delete it!'
                }).then((result) => {
                    if (result.isConfirmed) {
                        fetch(`/deleteOffer/${offerId}`, {
                            method: 'get',
                            headers: { "Content-Type": "application/json" }
                        })
                            .then(response => response.json())
                            .then(data => {
                                if (data.status === 'success') {
                                    Swal.fire({
                                        icon: "success",
                                        title: "Deleted",
                                        text: data.message
                                    });
                                    button.parentElement.parentElement.remove(); // Remove the entire row
                                } else {
                                    Swal.fire({
                                        icon: "error",
                                        title: "Error occurred",
                                        text: data.message
                                    });
                                }
                            })
                            .catch(error => {
                                console.log("Error", error);
                                Swal.fire({
                                    icon: 'error',
                                    title: "Error occurred",
                                    text: "An error occurred while deleting the offer"
                                });
                            });
                    }
                });
            }
        });
    });
});

                </script>