        <script>
           const removeWishlistBtn = document.querySelectorAll('.removeWishlist')

removeWishlistBtn.forEach((btn) => {
    btn.addEventListener('click', async (event) => {
        event.preventDefault();

        const productId = event.currentTarget.getAttribute('data-productId')

        if (productId) {
            const sendAlert = await Swal.fire({
                title: "Are you Sure ",
                text: "The product will be removed from wishlist",
                icon: "question",
                showCancelButton: true,
                confirmButtonColor: '#3085d6',
                cancelButtonColor: '#990f0f',
                confirmButtonText: 'Yes',
                cancelButtonText: 'No'
            });

            if (sendAlert.isConfirmed) {
                const response = await fetch(`/removefromwishlist/?productId=${productId}`);
                const result = await response.json()
                if (result.status === 'success') {
                    Swal.fire({
                        icon: 'success',
                        title: result.message,
                        showConfirmButton: false,
                        timer: 2000
                    })
                    setTimeout(() => {
                        location.reload()
                    }, 2000);

                } else if (result.status === 'blocked') {
                    Swal.fire({
                        icon: 'info',
                        title: result.message,
                        showConfirmButton: false,
                        timer: 3000
                    })
                    setTimeout(() => {
                        location.href = '/login?blocked=true'
                    }, 3500);
                } else {
                    Swal.fire({
                        icon: 'error',
                        title: result.message,
                        showConfirmButton: false,
                        timer: 1500
                    })
                }
            }
        }
    })
})
