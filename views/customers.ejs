    <main class="main-wrap">
        <header class="main-header navbar">
            <div class="col-search">
                <form class="searchform">
                    <div class="input-group">
                    </div>
                    <datalist id="search_terms">
                        <option value="Products">
                        <option value="New orders">
                        <option value="Apple iphone">
                        <option value="Ahmed Hassan">
                    </datalist>
                </form>
            </div>
        </header>
        <div class="search-bar">
            <form action="/admin/user-management" method="get" class="flex-container" id="searchForm">
                <input type="text" placeholder="Search Users" name="search" id="searchQuery" class="search-input">
                <button type="submit" class="sea">Search</button>
                <select name="status" class="statusFilter" onchange="this.form.submit()">
                    <option value="All">All</option>
                    <option value="active" <% if (statusFilter === 'active') { %>selected<% } %>>Active</option>
                    <option value="blocked" <% if (statusFilter === 'blocked') { %>selected<% } %>>Blocked</option>

                </select>
            </form>
        </div>
        
        <section class="content-main">
            <div class="content-header">
                <h2 class="content-title">Customers</h2>
                <div>
                </div>
            </div>
            <div class="card mb-4">
                <header class="card-header">
                    <div class="row gx-3">
                        <div class="col-lg-4 col-md-6 me-auto">
                            <!-- <input type="text" placeholder="Search..." class="form-control"> -->
                        </div>
                        <div class="col-lg-2 col-md-3 col-6">
                        </div>
                    </div>
                </header> <!-- card-header end// -->
                <div class="card-body">
                    <div class="table-responsive">
                        <table class="table table-bordered table-striped mb-0">
                            <thead>
                                <tr>
                                  <th>  </th>
                                  <th>Email</th>
                                  <th></th>

                                  <th>Status</th>
                                  <th>Actions</th>
                                </tr>
                              </thead>
                              <% users.forEach(user=> { %>
                                <tr>
                                    <td>
                                        <%= user.name %>
                                    </td>
                                    <td>
                                        <%= user.email %>
                                    </td>
                                    <td>
                                        <%= user.phone %>
                                    </td>
                                      <td>
                                                    <%= user.isBlocked ? 'Blocked' : 'Active' %>
                                                </td>

                                                <td class="iconss">
                                                    <a class="edit" href="/admin/user-management/block/<%= user._id %>"
                                                        title="<%= user.isBlocked ? 'Unblock' : 'Block' %>"
                                                        data-toggle="tooltip">
                                                        <%= user.isBlocked ? 'Unblock' : 'Block' %>
                                                    </a>

                                                </td>
                                                <% if (!searchQuery && users.length === 0) { %>
                                                    <tr>
                                                        <td colspan="5">No results found.</td>
                                                    </tr>
                                                <% } %>

                                </tr>
                                <% }); %>      
                                                </table>
                           <!-- table-responsive.// -->
                    </div>
                </div> <!-- card-body end// -->
            </div> <!-- card end// -->
        </section> <!-- content-main end// -->
        <footer class="main-footer font-xs">
            <div class="row pb-30 pt-15">
                </div>
            </div>
        </footer>
    </main>
    <div class="pagination">
        <% for(let i = 1; i <= totalPages; i++) { %>
            <a href="/admin/user-management?page=<%= i %>" class="<%= i === currentPage ? 'active' : '' %>"><%= i %></a>
        <% } %>
    </div>
    
            </div>
        </div>

    <style>
          #back-button {
      width: 30px;
    }
                .pagination {
        display: flex;
        justify-content: center;
        margin-top: 20px;
        margin-left: 200px;
    }
    
    .pagination a {
        margin: 0 5px;
        padding: 8px 12px;
        text-decoration: none;
        border: 1px solid #ccc;
        border-radius: 5px;
        color: #333;
    }
    
    .pagination a.active {
        background-color: #007bff;
        color: #fff;
        border-color: #007bff;
    }
    .search-bar {
    display: flex;
    margin-bottom: 20px;
    justify-content: flex-end;
    margin-top: 10px;
    margin-right: 10px;
}

.search-input, .statusFilter {
    padding: 8px;
    border: 1px solid #ccc;
    border-radius: 5px;
    margin-right: 5px;
    flex-grow: 1;
}

.sea {
    padding: 8px 12px;
    border: 1px solid #007bff;
    border-radius: 5px;
    background-color: #007bff;
    color: #fff;
    cursor: pointer;
}

.sea:hover {
    background-color: #0056b3;
}

.sort-category {
    display: flex;
    margin-bottom: 20px;
    justify-content: flex-end;
