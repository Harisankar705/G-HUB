            background-color: #fff;
            padding: 30px;
            border-radius: 5px;
            box-shadow: 0 0 20px rgba(0, 0, 0, 0.1);
        }

        .contact-from-area h3 {
            font-size: 24px;
            margin-bottom: 10px;
        }

        .contact-from-area p {
            font-size: 16px;
            margin-bottom: 30px;
            color: #666;
        }

        .contact-from-area .input-style {
            margin-bottom: 20px;
        }

        .contact-from-area input,
        .contact-from-area textarea {
            width: 100%;
            padding: 15px;
            border: 1px solid #ccc;
            border-radius: 5px;
            font-size: 16px;
            transition: border-color 0.3s;
        }

        .contact-from-area input:focus,
        .contact-from-area textarea:focus {
            outline: none;
            border-color: #007bff;
        }

        .contact-from-area .textarea-style textarea {
            height: 150px;
        }

        .contact-from-area .submit {
            display: inline-block;
            padding: 15px 30px;
            font-size: 18px;
            color: #fff;
            background-color: #007bff;
            border: none;
            border-radius: 5px;
            cursor: pointer;
            transition: background-color 0.3s;
        }

        .contact-from-area .submit:hover {
            background-color: #0056b3;
        }
    </style>
    
<script>
    document.addEventListener("DOMContentLoaded", function(event) {
        // Select the form element
        const form = document.getElementById('contact-form');

        // Add submit event listener to the form
        form.addEventListener('submit', async function(event) {
            event.preventDefault(); // Prevent default form submission behavior
            
            // Retrieve form data
            const username = document.querySelector('input[name="name"]').value;
            const email = document.querySelector('input[name="email"]').value;
            const subject = document.querySelector('input[name="subject"]').value;
            const phonenumber = document.querySelector('input[name="phonenumber"]').value;
            const message = document.querySelector('textarea[name="message"]').value;
            if (username === '' || email === '' || phonenumber === '' || subject === '' || message === '') {
                Swal.fire({
                    icon:"error",
                    text:"please fill all the fields"
                })
                                return;
            }

            if (!/^\d{10}$/.test(phonenumber) || parseInt(phonenumber) <= 0) {
    Swal.fire({
        icon: "error",
        text: "Phone number must contain exactly 10 digits and be greater than zero"
    });
    return;
}



            const data = { username: username, email: email, subject: subject, message: message,phonenumber:phonenumber };

            try {
                const response = await fetch('/submit-msg', {
                    method: "post",
                    headers: { "Content-Type": "application/json" },
                    body: JSON.stringify(data)
                });

                if (response.ok) {
                    Swal.fire({
                        icon: "success",
                        text: "Your message has been sent. You will get notified soon!",
                        title: "Submitted"
                    }).then(()=>{
                        window.location.reload()
                    })
                } else {
                    Swal.fire({
                        icon: "error",
                        text: "Failed to submit the message",
                        title: "Error occurred"
                    });
                }
            } catch (error) {
                console.error("Error occurred:", error);
            }
        });
    });
</script>
    
    
    
   
