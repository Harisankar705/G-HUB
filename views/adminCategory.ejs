        <main class="main-wrap">
            <section class="content-main">
                <div class="content-header">
                    <div>
                        <h2 class="content-title card-title">Categories </h2>
                        <p>Add, edit or delete a category</p>
                    </div>
                    <div class="d-grid">
                        <a href="/admin/category/add"><button class="btn btn-primary">Add category</button>
                        </a>
                    </div>
                    <div class="search-bar">
                        <form action="/admin/category" method="get">
                            <input type="text" placeholder="Search category" name="search" id="searchQuery" value="<%=searchQuery%>" class="search-input">
                            <button class="sea" type="submit">Search</button>
                            
                <select name="isPublished" class="search-input">
                    <option value="">All</option>
                    <option value="true" <%= isPublished === 'true' ? 'selected' : '' %>>Published</option>
                    <option value="false" <%= isPublished === 'false' ? 'selected' : '' %>>Not Published</option>
                </select>
                
                <button type="submit" class="sea">Filter</button> 
                        </form>
                    </div>
                 
                    
                    
                
                    
                </div>
                <div class="card">
                    <div class="card-body">
                        <div class="row">
                            <div class="col-md-9">
                                <div class="table-responsive">
                                    <table class="table table-hover">
                                        <thead>
                                            <tr>
                                                <th class="text-center">
                                                    <!-- <div class="form-check"> -->
                                                        <!-- <input class="form-check-input" type="checkbox" value="" /> -->
                                                    </div>
                                                </th>
                                                <th>Name</th>
                                                <th>Status</th>
                                                <th>Action</th>
                                                <th>Edit Category</th>
                                            </tr>
                                        </thead>
                                        <% categories.forEach(category => { %>
                                            <tr>
                                                <td class="text-center">
                                                    <div class="form-check">
                                                        <!-- <input class="form-check-input" type="checkbox" value=""/> -->
                                                    </div>
                                                </td>
                                                <td><b><%= category.name %></b></td>
                                                <td>
                                                    <p   class ="<%= category.isPublished ? 'badge badge-pill badge-soft-success' :  'badge badge-pill badge-soft-danger' %>"><%= category.isPublished ? 'Active' : 'Inactive' %></p>
                                                </td>
                                                <td>
                                                    <a href="/admin/category/restrict/<%= category._id %>" id="restrict" title="<%= category.isPublished ? 'Unpublish' : 'Publish' %>"
                                                        class="fw-bold text-warning">
                                                        <%= category.isPublished ? 'Unpublish' : 'Publish' %>
                                                    </a>
                                                </td>
                                                <td>
                                                    <a href="/admin/category/edit/<%= category._id %>" id="edit" class="icon material-icons m">edit</a>
                                                </a><br><br>
                                                   
                                                </td>
                                              
                                            </tr>
                                        <% }); %>
                                    </table>
                                </div>
                            </div> <!-- .col// -->
                        </div> <!-- .row // -->
                    </div> <!-- card body .// -->
                </div>
                <div class="pagination">
                    <%for(let i=1;i<=totalPages;i++){%>
                        <a href="/admin/category?page=<%= i %>" class="<%= i === currentPage ? 'active' : '' %>"><%= i %></a>
                        <%}%>
                    </div>
            </section> <!-- content-main end// -->
        </main>
