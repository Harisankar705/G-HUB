    <main class="main-wrap">
        <section class="content-main">
            <div class="content-header">
                <div>
                    <h2 class="content-title card-title">Brand </h2>
                    <p>Add, edit or delete a Brand</p>
                </div>
                <div class="d-grid">
                    <a href="/add-brand"><button class="btn btn-primary">Add Brand</button>
                    </a>
                </div>
                <div class="search-bar">
                    <form action="/admin-brand" method="get">
                        <input type="text" placeholder="Search Brand" name="search" id="searchQuery" value="<%=searchQuery%>" class="search-input">
                        <button class="sea" type="submit">Search</button>
                        
            <select name="isPublished" class="search-input">
                <option value="">All</option>
                <option value="true" <%= isPublished === 'true' ? 'selected' : '' %>>Published</option>
                <option value="false" <%= isPublished === 'false' ? 'selected' : '' %>>Not Published</option>
            </select>
            
            <button type="submit" class="sea">Filter</button> 
                    </form>
                </div>
             
                
                
            
                
            </div>
            <div class="card">
                <div class="card-body">
                    <div class="row">
                        <div class="col-md-9">
                            <div class="table-responsive">
                                <table class="table table-bordered table-striped mb-0">
                                    <thead>
                                        <tr>
                                          <th>Brand Name</th>
                                          <th>Status</th>
                                          <th>Actions</th>
                                            <th>Edit</th>
                                        </tr>
                                      </thead>
                                      <% brand.forEach(brand=> { %>
                                        <tr>
                                            <td>
                                                <%= brand.name %>
                                            </td>
                                              <td>
                                                            <%= brand.isPublished? 'Blocked' : 'Active' %>
                                                        </td>   
        
                                                        <td class="iconss">
                                                            <a class="edit" href="/toogle-status/<%= brand._id %>"
                                                                title="<%= brand.isBlocked ? 'Unblock' : 'Block' %>"
                                                                data-toggle="tooltip">
                                                                <%= brand.isPublished ? 'Unblock' : 'Block' %>
                                                            </a>
        
                                                        </td>
                                                        <td>
                                                            <a href="/edit-brand/<%= brand._id %>" id="edit" <i class="icon material-icons md-edit"></a>
                                                        </a><br><br>
                                                           
                                                        </td>
                                                        <% if (!searchQuery && brand.length === 0) { %>
                                                            <tr>
                                                                <td colspan="5">No results found.</td>
                                                            </tr>
                                                        <% } %>
        
                                        </tr>
                                        <% }); %>      
                                                        </table>
                            </div>
                        </div> <!-- .col// -->
                    </div> <!-- .row // -->
                </div> <!-- card body .// -->
            </div>
        <div class="pagination">
            <%for(let i=1;i<=totalPages;i++){%>
                <a href="/admin-brand?page=<%= i %>" class="<%= i === currentPage ? 'active' : '' %>"><%= i %></a>
                <%}%>
            </div>
        </section> <!-- content-main end// -->
    </main>
    <style>
        #back-button {
  width: 30px;
}
            .pagination {
    display: flex;
    justify-content: center;
    margin-top: 20px;
    margin-left: 200px;
}

.pagination a {
    margin: 0 5px;
    padding: 8px 12px;
    text-decoration: none;
    border: 1px solid #ccc;
    border-radius: 5px;
    color: #333;
}

.pagination a.active {
    background-color: #007bff;
    color: #fff;
    border-color: #007bff;
}
.search-bar {
        display: flex;
        margin-bottom: 20px;
    }

    .search-input {
        padding: 8px;
        border: 1px solid #ccc;
        border-radius: 5px;
        margin-right: 5px;
        flex-grow: 1;
    }

    .sea {
        padding: 8px 12px;
        border: 1px solid #007bff;
        border-radius: 5px;
        background-color: #007bff;
        color: #fff;
        cursor: pointer;
    }

    .sea:hover {
        background-color: #0056b3;
    }
