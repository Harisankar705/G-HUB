            <div class="row mt-3">
              <% if (user) { %>
              <form
                action="/saveaddress/<%=user._id%>"
                method="post"
                id="addAddressForm"
              >
                <div class="row mt-3">
                  <div class="col-md-12">
                    <label class="labels">House Address</label>
                    <input
                      type="text"
                      class="form-control"
                      name="houseaddress"
                      id="address"
                      placeholder="House address"
                      required
                    />
                  </div>
                  <div class="col-md-12">
                    <label class="labels">State</label>
                    <input
                      type="text"
                      class="form-control"
                      name="state"
                      id="state"
                      placeholder="state"
                      required
                    />
                  </div>
                  <div class="col-md-12">
                    <label class="labels">District</label>
                    <input
                      type="text"
                      class="form-control"
                      name="district"
                      id="district"
                      placeholder="district"
                    />
                  </div>
                  <div class="col-md-12">
                    <label class="labels">City</label>
                    <input
                      type="text"
                      class="form-control"
                      name="city"
                      id="city"
                      placeholder="city"
                      required
                    />
                  </div>
                  <div class="col-md-12">
                    <label class="labels">Pincode</label>
                    <input
                      type="number"
                      class="form-control"
                      name="pincode"
                      id="pincode"
                      maxlength="6"
                      placeholder="pincode"
                      required
                    />
                  </div>
                  <div class="col-md-12">
                    <label class="labels">Phone number</label>
                    <input
                      type="number"
                      class="form-control"
                      name="phonenumber"
                      id="phonenumber"
                      placeholder="phonenumber"
                      required
                    />
                  </div>
                </div>
                <div class="mt-5 text-center">
                  <button
                    class="btn btn-danger profile-button"
                    type="submit"
                    data-userid="<%=user._id%>"
                  >
                    Add Address
                  </button>
                </div>
              </form>
              <% } else { %>
              <p>User not found</p>
              <% } %>
            </div>
          </div>
        </div>
      </div>
    </div>
