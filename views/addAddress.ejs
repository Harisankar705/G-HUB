    <script>
      document.addEventListener("DOMContentLoaded", function () {
        document
          .getElementById("addAddressForm")
          .addEventListener("submit", function (event) {
            event.preventDefault();

            // Retrieve UserId
            const userId = "<%=user._id%>";

            // Collect form data
            const formData = {
              houseaddress: document.getElementById("address").value.trim(),
              state: document.getElementById("state").value.trim(),
              district: document.getElementById("district").value.trim(),
              city: document.getElementById("city").value.trim(),
              pincode: document.getElementById("pincode").value.trim(),
              phonenumber: document.getElementById("phonenumber").value.trim(),
            };
            if (Object.values(formData).some((value) => value === "")) {
              // Display an error message if any field is empty
              Swal.fire({
                icon: "error",
                title: "Error",
                text: "All fields are required",
              });
              return;
            }
            const pincodeRegex = /^\d{1,6}$/;
            if (!pincodeRegex.test(formData.pincode)) {
              Swal.fire({
                icon: "Error",
                title: "Error",
                text: "Please enter the correct pincode with maximum length of 6 digits & positive number",
              });
            }

            fetch(`/saveaddress/${userId}`, {
              method: "POST",
              headers: {
                "Content-Type": "application/json",
              },
              body: JSON.stringify(formData),
            })
              .then((response) => response.json())
              .then((data) => {
                console.log(data);

                // Check the status and display SweetAlert accordingly
                if (data.status === "success") {
                  Swal.fire({
                    icon: "success",
                    title: "Success",
                    text: data.message,
                    timer: 1500,
                    showConfirmButton: false,
                  }).then(() => {
                    // Redirect to the user profile page after success
                    window.location.href = `/userprofile/${userId}`;
                  });
                } else {
                  Swal.fire({
                    icon: "error",
                    title: "Error",
                    text: data.message,
                  });
                }
              })
              .catch((error) => {
                console.log("error occurred", error);
              });
          });
      });
    </script>
