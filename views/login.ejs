    <!DOCTYPE html>
    <html>

    <head>
        <link rel="stylesheet" href="style.css">
        <link href="/assets/css/login.css" rel="stylesheet">

        <style>
            /* Add your modal styles here */
            .modal {
                display: none;
                position: fixed;
                top: 0;
                left: 0;
                width: 100%;
                height: 100%;
                background-color: rgba(0, 0, 0, 0.7);
                justify-content: center;
                align-items: center;
                z-index: 999; /* Set a high z-index value */
            }

            .modal-content {
                background-color: #fefefe;
                padding: 20px;
                border-radius: 5px;
                text-align: center;
                position: relative;
                z-index: 1000; /* Set a higher z-index value */
            }
            #error-message {
            background-color: #dc3545; /* Bootstrap's danger color */
            color: #fff;
            padding: 10px;
            border-radius: 5px;
            margin-bottom: 10px;
            display: none; /* Initially hide the error message */
        }
        </style>

        <title>G-HUB</title>
    </head>

    <body>
        <div id="error-message" class="bg-danger text-white">
        </div>

        <div class="container" id="container">
            <div class="form-container log-in-container">
<form action="/login" method="post" enctype="application/x-www-form-urlencoded">
                    <h1>Log in</h1>
                    <!-- <input type="text" id="username" placeholder="Username" required /> -->
                    <input type="email" id="email" placeholder="Email" name="email" required />
                    <input type="password" id="password" placeholder="Password" name="password"  required />
                    <span toggle="#password" class="eye toggle-password"></span>            
                    <!-- <input type="password" id="confirmPassword" placeholder="Confirm Password" required /> -->
                    <a href="/signup">Dont have an account</a>
                    <button type='submit'>Log in</button>
                    <div class="bg-danger text-white" id="error-message-container"><%=message%></div>

                </form>
            </div>
            <div class="overlay-container">
                <div class="overlay">
                    <div class="overlay-panel overlay-right">
                        <h1>G-HUB</h1>
                        <p>The complete Smartphone Store</p>
                    </div>
                </div>
            </div>
        </div>
        <script>
            function validate() {
                let email = document.getElementById('email').value.trim()
                let password = document.getElementById('password').value.trim()
                const errorMessageContainer = document.getElementById("error-message");
                if (email === "" || password === "") {
                    errorMessageContainer.innerText = "Please fill all the fields";
                    errorMessageContainer.style.display = "block"; // Show the error message
                    setTimeout(() => {
                        errorMessageContainer.style.display = "none"; // Hide the error message after 3 seconds
                    }, 3000);
                    return false;
                } else {
                    return true;
                }
            }
    
            document.addEventListener("DOMContentLoaded", () => {
                var passwordInput = document.getElementById('password');
                var eyeIcon = document.querySelector('.eye');
                eyeIcon.addEventListener('click', () => {
                    var type = passwordInput.getAttribute('type') === "password " ? 'text' : 'password';
                    passwordInput.setAttribute('type', type);
                    this.classList.toggle('hide-password');
                });
            });
        </script>
    
        <!-- Add this script in your login page -->
        <script>
            document.addEventListener("DOMContentLoaded", () => {
                const errorMessage = new URLSearchParams(window.location.search).get("error");
                const errorMessageContainer = document.getElementById("error-message");
                if (errorMessage) {
                    // Display the error message in your HTML
                    errorMessageContainer.innerText = errorMessage;
                    errorMessageContainer.style.display = "block"; // Show the error message
                    setTimeout(() => {
                        errorMessageContainer.style.display = "none"; // Hide the error message after 3 seconds
                    }, 3000);
                }
            });
        </script>

